#!/bin/bash

# for-in-loop의 예제

echo "========================="
# 시퀀스를 이용한 배열 생성 반복
for n in $(seq 10)
do
  if [[ $n%2 -eq 0 ]]
  then
    echo "even number >>" $n
  else
   echo "odd number >>" $n
  fi
done


echo "========================="
# 수동 입력 값을 이용한 배열 반복
for n in 1 3 5 7 9 11
do
  if [[ $n%2 -eq 0 ]]
  then
    echo "even number >>" $n
  else
    echo "odd number >>" $n
  fi
done
